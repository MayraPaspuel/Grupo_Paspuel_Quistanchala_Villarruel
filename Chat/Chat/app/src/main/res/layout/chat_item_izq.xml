<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/stringMensaje"
        android:id="@+id/txtMensaje"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/background_izquierda"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/imagenMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMensaje"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/stringMensaje" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHora"
        android:paddingLeft="8dp"
        android:layout_below="@id/imagenMensaje"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>